<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mcagataybarin.movienight.ProfileFragment"
    android:background="@color/blueishPurple">

        <TextView
            android:id="@+id/user_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/user_profile_photo"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <ImageButton
            android:id="@+id/user_profile_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circular_border"
            android:backgroundTint="@color/bestPurple"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/user_events_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/bestPurple"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/user_profile_name"
            android:layout_marginTop="10dp"
            android:text="EVENTS"
            android:background="@drawable/rounded_rectangle"
            android:backgroundTint="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textStyle="bold"/>

        <FrameLayout
            android:id="@+id/user_events"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/user_events_label"
            android:layout_gravity="bottom"
            >

        </FrameLayout>

</RelativeLayout>